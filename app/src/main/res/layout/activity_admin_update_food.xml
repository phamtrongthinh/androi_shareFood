<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_app"
    tools:context=".admin.admin_updateFood">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <ImageView
            android:id="@+id/img_updateFood_back"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:src="@drawable/back" />
    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtUpdateFood1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thêm món mới"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_updateFood_chonanh"
                android:layout_width="110dp"
                android:layout_height="102dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/dish" />

            <TextView
                android:id="@+id/txtUpdateFood2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Lựa chọn ảnh"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edt_updateFood_namefood"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="#E8E2E2"
                android:ems="10"
                android:hint="Tên món"
                android:inputType="text"
                android:paddingLeft="10dp"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/edt_updateFood_congthuc"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="17dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="10dp"
                android:background="#E8E2E2"
                android:ems="10"
                android:hint="Công thức"
                android:inputType="text" />

            <EditText
                android:id="@+id/edt_updateFood_link"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="#E8E2E2"
                android:ems="10"
                android:hint="Link video"
                android:inputType="text"
                android:paddingLeft="10dp"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/edt_updateFood_adress"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="#E8E2E2"
                android:ems="10"
                android:hint="Địa chỉ"
                android:inputType="text"
                android:paddingLeft="10dp"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/edt_updateFood_tacgia"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="#E8E2E2"
                android:ems="10"
                android:hint="Tắc giả"
                android:inputType="text"
                android:paddingLeft="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_updateFood_danhmuc"
                    android:layout_width="213dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="danh mục"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_updateFood_danhmuc"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#F1E6E6"
                    android:text="Chọn danh mục"
                    tools:ignore="TextContrastCheck" />

            </LinearLayout>

            <EditText
                android:id="@+id/medt_updateFood_mota"
                android:layout_width="358dp"
                android:layout_height="123dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:background="#F3EDED"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Mô tả"
                android:inputType="textMultiLine"
                android:minLines="4"
                android:paddingLeft="10dp"
                android:paddingTop="10dp" />

            <Button
                android:id="@+id/btn_updateFood_sua"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="Sửa " />
        </LinearLayout>
    </ScrollView>


</LinearLayout>