<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin.admin_updateAccount">

    <ImageView
        android:id="@+id/img_adminUpdateAccc_back"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/ic_back" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thay đổi quyền truy cập"
        android:textAlignment="center"
        android:textSize="28sp" />

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/imageView13"
        android:layout_width="252dp"
        android:layout_height="173dp"
        android:layout_gravity="center"
        android:src="@drawable/user" />

    <TextView
        android:id="@+id/txt_admin_updateAcc_email"
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:background="#F8F0F0"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"

        android:ems="10"
        android:hint="Email"
        android:inputType="text"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_admin_updateAcc_ten"
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:background="#F8F0F0"
        android:ems="10"
        android:hint="Họ tên "
        android:inputType="text"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_admin_updateAcc_phone"
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:background="#F8F0F0"
        android:ems="10"
        android:hint="Phone"
        android:inputType="text"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_admin_updateAcc_adress"
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:background="#F8F0F0"
        android:ems="10"
        android:hint="Địa chỉ"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:layout_marginTop="10dp"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="328dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="Đây là tài khoản admin"
            android:textSize="24sp" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1" />


    </LinearLayout>
    <Button
        android:id="@+id/btnSuaRole"

        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Sửa" />

</LinearLayout>